CC = g++
LIBDIR = ../../lib
INCDIR = ../../include
CCFLAGS = -Wall -std=c++11 -g
LDFLAGS = -L$(LIBDIR) -lnowic -lsort

SRC1 = sortDriver.cpp
OBJ1 = $(SRC1:.cpp =.o)
EXE1 = sortDriver

$(EXE1): $(OBJ1)
	$(CC) $(CCFLAGS) -I$(INCDIR) -o $@ $^ $(LDFLAGS)
	
	
.PHONY: all clean
all: $(EXE1)
clean:
	rm -f $(OBJ1) $(EXE1)


