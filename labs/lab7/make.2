CC = g++
LIBDIR = ../../lib
INCDIR = ../../include
CCFLAGS = -Wall -std=c++11 -g
LDFLAGS = -L$(LIBDIR) -lnowic

SRCS = sortDriver.cpp comparator.cpp bubble.cpp quick.cpp printlist.cpp
OBJS = $(SRCS:.cpp =.o)
EXE1 = sortDriver

$(EXE1): $(OBJS)
	$(CC) $(CCFLAGS) -I$(INCDIR) -o $@ $^ $(LDFLAGS)

	
.PHONY: all clean
all: $(EXE1)
clean:
	rm -f $(EXE1)


